.calendar {
  background-color: pink;
  margin: 24rpx 24rpx;
}
/* 月份切换 */
.current_month {
  width: 100%;
  height: 127rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.curr_month {
  text-align: center;
  width: 60%;
}
.last_month {
  width: 20%;
  text-align: left;
}
.next_month {
  width: 20%;
  text-align: right;
}
.last_month, .next_month {
  font-size: 25rpx;
}
.last_month text, .next_month text {
  padding: 0 11rpx;
}
.last_month image, .next_month image {
  width: 11rpx;
  height: 18rpx;
}
.curr_month {
  font-size: 30rpx;
  font-weight: 700;
}

/* 星期 */
.week{
  display: flex;
}
.week view {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 25rpx;
}

/* 日期 */
.date view{
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 25rpx;
}
.invalid {
  color: #999999;
}
.choose {
  background-color: #36BC96;
}